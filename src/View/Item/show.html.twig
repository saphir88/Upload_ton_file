{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="jumbotron">
            <div class="row">
                <h3>Liste des fichiers</h3>
            </div>
            <div class="row">
                {% if images is defined %}
                    {% for image in images %}
                        <div class="col-sm-6 col-md-4">
                            <div class="thumbnail">
                                <img src="assets/images/{{ image }}" alt="image">
                                <div class="caption">
                                    <h3>{{ image }}</h3>
                                    <form action="/delete" method="post">
                                        <input type="hidden" name="delete" value="{{ image }}">
                                        <button type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <h4>Aucun fichier upload√©</h4>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
